<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="330dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/respond_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/requet_accepted"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:padding="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/respond_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintStart_toStartOf="@id/respond_tv"
        app:layout_constraintEnd_toEndOf="@id/respond_tv"
        app:layout_constraintTop_toBottomOf="@id/respond_tv"
        android:src="@drawable/ic_happy_colored" />

    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@id/respond_tv"
        app:layout_constraintTop_toBottomOf="@id/respond_img"
        android:textSize="17sp"
        android:padding="15dp"/>

</android.support.constraint.ConstraintLayout>